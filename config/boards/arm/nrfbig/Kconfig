config BOARD_ENABLE_DCDC
    bool "Enable DCDC mode"
    select SOC_DCDC_NRF52X
    default y
    depends on (BOARD_NRFBIG_11 || BOARD_NRFBIG_11_FLIPPED || BOARD_NRFBIG_13 || BOARD_NRFBIG_13_52833)

config BOARD_NRFBIG_CHARGER
    bool "Enable battery charger"
    default y
    depends on (BOARD_NRFBIG_13 || BOARD_NRFBIG_13_52833)
