config BOARD_ENABLE_DCDC
    bool "Enable DCDC mode"
    select SOC_DCDC_NRF52X
    default y
    depends on (BOARD_ELKHEAD_11 || BOARD_ELKHEAD_11_FLIPPED || BOARD_ELKHEAD_13 || BOARD_ELKHEAD_13_52833)

config BOARD_ELKHEAD_CHARGER
    bool "Enable battery charger"
    default y
    depends on (BOARD_ELKHEAD_13 || BOARD_ELKHEAD_13_52833)
